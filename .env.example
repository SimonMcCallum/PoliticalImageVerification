# Production environment variables
# Copy to .env and fill in real values before deploying.

# Database
POSTGRES_PASSWORD=change-this-to-a-strong-password

# API secrets - generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=change-this-to-a-random-string

# Encryption master key - generate with: python -c "import secrets; print(secrets.token_hex(32))"
MASTER_ENCRYPTION_KEY=change-this-to-a-64-char-hex-string

# Public URL where the verification portal is accessible
VERIFICATION_BASE_URL=https://verify.yourdomain.nz/verify
